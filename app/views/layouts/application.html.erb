<!DOCTYPE html>
<html>
  <head>
    <title>BankingApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <% if Current.user %>
      <div class="navbar">
        <div>Navbar</div>
        <div class="username"><%= Current.user.username %></div>
      </div>
    <% end %>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
